<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="800.0" maxWidth="1280.0" minHeight="800.0" minWidth="1280.0" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
   <children>
      <BorderPane prefHeight="800.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="loadMenu" mnemonicParsing="false" text="Load" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <left>
            <VBox prefHeight="771.0" prefWidth="355.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label text="Search:" />
                        <TextField fx:id="searchBox" prefHeight="27.0" prefWidth="263.0" promptText="Search..." />
                     </children>
                  </HBox>
                  <AnchorPane prefHeight="749.0" prefWidth="345.0">
                     <children>
                        <VBox prefHeight="701.0" prefWidth="335.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <HBox prefHeight="24.0" prefWidth="335.0" spacing="10.0">
                                 <children>
                                    <RadioButton fx:id="nameSearch" mnemonicParsing="false" selected="true" text="Name">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="searchToggle" />
                                       </toggleGroup>
                                    </RadioButton>
                                    <RadioButton fx:id="amountSearch" mnemonicParsing="false" text="Amount" toggleGroup="$searchToggle" />
                                    <RadioButton fx:id="barcodeSearch" mnemonicParsing="false" text="Barcode" toggleGroup="$searchToggle" />
                                    <RadioButton fx:id="categorieSearch" mnemonicParsing="false" text="Categorie" toggleGroup="$searchToggle" />
                                 </children>
                              </HBox>
                              <Separator prefWidth="200.0" />
                              <Button fx:id="testButton" mnemonicParsing="false" text="Load" />
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                 <children>
                                    <ToggleButton fx:id="addButton" mnemonicParsing="false" text="Add">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="addRemoveToggle" />
                                       </toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton fx:id="removeButton" mnemonicParsing="false" text="Remove" toggleGroup="$addRemoveToggle" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </left>
         <center>
            <VBox>
               <children>
                  <ListView fx:id="listView" prefHeight="902.0" prefWidth="925.0" BorderPane.alignment="CENTER" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
